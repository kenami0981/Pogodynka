<Window x:Class="Pogodynka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pogodynka"
        mc:Ignorable="d"
        Title="Pogodynka" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBox Height="20" Margin="3"/>
            <ComboBox Margin="3" Name ="cb_capitals"/>
            <Button Margin="3" Content="Get Pogoda" Click="SprawdzPogode_Click"></Button>
            <TextBlock x:Name="Display_json" Height="200" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Visible"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
